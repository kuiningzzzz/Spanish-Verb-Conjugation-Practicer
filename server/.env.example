# 服务器配置
PORT=3000
JWT_SECRET=change-this-secret-in-production

# 邮箱配置（用于发送验证码）
# 以QQ邮箱为例，其他邮箱服务商请参考相应文档
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_USER=your-email@qq.com
# 注意：这里填写的是授权码，不是邮箱密码
# QQ邮箱授权码获取方式：邮箱设置 -> 账户 -> POP3/IMAP/SMTP服务 -> 生成授权码
EMAIL_PASS=your-email-auth-code


# Grafana管理员账号配置（可观测性面板）
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-grafana-password

# 管理后台配置
# 生产环境请使用 HTTPS 域名，并指向 /admin-api 路径
ADMIN_API_BASE_URL=https://conjugamos.top/admin-api
ADMIN_WEB_ORIGIN=https://conjugamos.top
# 管理员JWT签名密钥（建议生产环境单独设置，与用户JWT_SECRET区分）
ADMIN_JWT_SECRET=change-admin-secret
# 管理员令牌有效期（如 1d=1天, 7d=7天, 2h=2小时）
ADMIN_JWT_EXPIRES_IN=1d

# 初始管理员账号（首次启动时自动创建）
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=ChangeMe123!
INITIAL_ADMIN_USERNAME=superadmin

# 开发者账号（拥有更高权限，可查看日志、反馈等）
DEV_USER_EMAIL=dev@example.com
DEV_USER_PASSWORD=ChangeMeDev123!
DEV_USER_NAME=devops

# 出题模型配置（generator/validator/revisor 共用）
EXERCISE_GENERATOR_PROVIDER=deepseek
EXERCISE_GENERATOR_API_KEY=
EXERCISE_GENERATOR_API_URL=https://api.deepseek.com/v1/chat/completions
EXERCISE_GENERATOR_MODEL=deepseek-chat
EXERCISE_GENERATOR_TIMEOUT_MS=45000

# 采样参数
EXERCISE_GENERATOR_GENERATOR_MAX_TOKENS=1500
EXERCISE_GENERATOR_VALIDATOR_MAX_TOKENS=1500
EXERCISE_GENERATOR_REVISOR_MAX_TOKENS=3000
EXERCISE_GENERATOR_GENERATOR_TEMPERATURE=0.7
EXERCISE_GENERATOR_VALIDATOR_TEMPERATURE=0.5
EXERCISE_GENERATOR_REVISOR_TEMPERATURE=0.4

# 若要用 qwen，请改为：
# EXERCISE_GENERATOR_PROVIDER=qwen
# EXERCISE_GENERATOR_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions
# EXERCISE_GENERATOR_MODEL=qwen-plus
# EXERCISE_GENERATOR_API_KEY=<你的DashScope兼容API key>
